# Server Configuration
PORT=3001
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# PayHere Configuration
PAYHERE_MERCHANT_ID=your_payhere_merchant_id
PAYHERE_MERCHANT_SECRET=your_payhere_merchant_secret
# Set to 'true' to use live PayHere, 'false' or unset for sandbox
USE_LIVE_PAYHERE=false
# Backend URL for PayHere callbacks (auto-detected if not set)
BACKEND_URL=http://localhost:3001

# Firebase Configuration (Optional - for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Business Configuration
RESTAURANT_NAME=RealTaste
RESTAURANT_PHONE=+94771234567
BUSINESS_OPEN_TIME=10:00
BUSINESS_CLOSE_TIME=22:00

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
