# =============================================================================
# REALTASTE FRONTEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env for local development
# For production deployment, set these in Cloudflare Pages dashboard
# All frontend variables must be prefixed with VITE_ to be accessible

# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================
# Supabase project URL
VITE_SUPABASE_URL=https://your-project-id.supabase.co
# Supabase anonymous key (public, safe for frontend)
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL (development: http://localhost:3001/api, production: https://your-app.fly.dev/api)
VITE_API_URL=http://localhost:3001/api
# OAuth redirect URL (optional - defaults to current origin + /auth/callback)
VITE_REDIRECT_URL=http://localhost:5173/auth/callback

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application name
VITE_APP_NAME=RealTaste
# Application version
VITE_APP_VERSION=1.0.1

# =============================================================================
# RESTAURANT CONFIGURATION
# =============================================================================
# Restaurant coordinates (latitude and longitude)
VITE_RESTAURANT_LAT=6.261449
VITE_RESTAURANT_LNG=80.906462
# Restaurant details
VITE_RESTAURANT_NAME="RealTaste Restaurant"
VITE_RESTAURANT_ADDRESS="Main Location"
# Delivery radius in kilometers
VITE_DELIVERY_RADIUS=10

# =============================================================================
# PAYMENT GATEWAY (PayHere - Sri Lanka)
# =============================================================================
# PayHere merchant ID
VITE_PAYHERE_MERCHANT_ID=your_payhere_merchant_id
# Use sandbox mode (true for testing, false for production)
VITE_PAYHERE_SANDBOX=true

# =============================================================================
# PUSH NOTIFICATIONS (Firebase - Optional)
# =============================================================================
# Firebase API key
VITE_FIREBASE_API_KEY=your-firebase-api-key
# Firebase auth domain
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
# Firebase project ID
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
# Firebase storage bucket
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
# Firebase messaging sender ID
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
# Firebase app ID
VITE_FIREBASE_APP_ID=your-firebase-app-id
# Firebase VAPID key for push notifications
VITE_FIREBASE_VAPID_KEY=your-vapid-key

# =============================================================================
# MAP SERVICES (Optional)
# =============================================================================
# Mapbox access token - Get from https://account.mapbox.com/access-tokens/
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
# OpenCage Geocoding API key - Get from https://opencagedata.com/api
VITE_OPENCAGE_API_KEY=your_opencage_api_key_here
