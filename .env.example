# RealTaste Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# =============================================================================
# PAYHERE PAYMENT GATEWAY (Sri Lanka)
# =============================================================================
PAYHERE_MERCHANT_ID=your-merchant-id
PAYHERE_MERCHANT_SECRET=your-merchant-secret
# Set to 'true' to use live PayHere, 'false' or unset for sandbox
USE_LIVE_PAYHERE=false
# Backend URL for PayHere callbacks (auto-detected if not set)
BACKEND_URL=http://localhost:3001

# =============================================================================
# FIREBASE CONFIGURATION (for push notifications)
# =============================================================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
RESTAURANT_NAME=RealTaste
RESTAURANT_PHONE=+94 76 195 2541
BUSINESS_OPEN_TIME=10:00
BUSINESS_CLOSE_TIME=22:00

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FRONTEND URL (for CORS)
# =============================================================================
FRONTEND_URL=https://your-frontend-domain.pages.dev
